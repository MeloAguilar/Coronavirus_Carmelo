@model Diagnostico_VM

@{
    ViewData["Title"] = "Diagnostico";
}

<h1>Diagnostico</h1>

<h4>clsPersona</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Diagnostico">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.usuario.DniPersona" class="control-label"></label>
                <input asp-for="@Model.usuario.DniPersona" class="form-control" />
                <span asp-validation-for="@Model.usuario.DniPersona" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.usuario.NombrePersona" class="control-label"></label>
                <input asp-for="@Model.usuario.NombrePersona" class="form-control" />
                <span asp-validation-for="@Model.usuario.NombrePersona" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.usuario.ApellidosPersona" class="control-label"></label>
                <input asp-for="@Model.usuario.ApellidosPersona" class="form-control" />
                <span asp-validation-for="@Model.usuario.ApellidosPersona" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.usuario.Telefono" class="control-label"></label>
                <input asp-for="@Model.usuario.Telefono" class="form-control" />
                <span asp-validation-for="@Model.usuario.Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.usuario.Direccion" class="control-label"></label>
                <input asp-for="@Model.usuario.Direccion" class="form-control" />
                <span asp-validation-for="@Model.usuario.Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.HiddenFor(m => @Model.usuario.Diagnostico)
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

